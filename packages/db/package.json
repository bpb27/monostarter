{
	"name": "@repo/db",
	"version": "0.0.1",
	"private": true,
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch --preserveWatchOutput",
		"lint": "biome check && tsc --noEmit",
		"db:introspect": "kysely-codegen --dialect postgres --camel-case --env-file .env --out-file ./src/schema.ts",
		"db:migrate:latest": "tsx ./src/scripts/migrate.ts -- direction=migrateToLatest",
		"db:migrate:up": "tsx ./src/scripts/migrate.ts -- direction=migrateUp",
		"db:migrate:down": "tsx ./src/scripts/migrate.ts -- direction=migrateDown",
		"db:migration": "tsx ./src/scripts/generate-migration.ts"
	},
	"devDependencies": {
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^22.13.4",
		"kysely-codegen": "^0.17.0",
		"tsx": "^4.19.3"
	},
	"dependencies": {
		"@types/pg": "^8.11.0",
		"kysely": "^0.27.2",
		"pg": "^8.11.3"
	}
}
