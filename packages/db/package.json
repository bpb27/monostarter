{
	"name": "@repo/db",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"files": [
		"dist/**"
	],
	"exports": {
		"./database": {
			"types": "./dist/database.d.ts",
			"import": "./dist/database.js"
		},
		"./auth": {
			"types": "./dist/utils/hash_password.d.ts",
			"import": "./dist/utils/hash_password.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch --preserveWatchOutput",
		"lint": "biome check && tsc --noEmit",
		"db:introspect": "kysely-codegen --dialect postgres --camel-case --env-file .env --out-file ./src/schema.ts",
		"db:migrate:latest": "tsx ./src/scripts/migrate.ts -- direction=migrateToLatest",
		"db:migrate:up": "tsx ./src/scripts/migrate.ts -- direction=migrateUp",
		"db:migrate:down": "tsx ./src/scripts/migrate.ts -- direction=migrateDown",
		"db:generate:migration": "tsx ./src/scripts/generate-migration.ts",
		"db:seed": "tsx ./src/scripts/seed.ts"
	},
	"devDependencies": {
		"@repo/typescript-config": "workspace:*",
		"@types/bcrypt": "^5.0.2",
		"@types/node": "^22.13.4",
		"kysely-codegen": "^0.17.0",
		"tsx": "^4.19.3",
		"@types/pg": "^8.11.0"
	},
	"dependencies": {
		"pg": "^8.11.3",
		"bcrypt": "^5.1.1",
		"kysely": "^0.27.2"
	}
}
